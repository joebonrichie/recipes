From: Reilly Brogan <reilly@reillybrogan.com>
Date: Sat, 20 Sep 2025 13:33:13 -0500
Subject: [PATCH] Hack

---
 configure.ac | 14 +++++++-------
 1 file changed, 7 insertions(+), 7 deletions(-)

diff --git a/configure.ac b/configure.ac
index ada8110cae..c8ec52a7e7 100644
--- a/configure.ac
+++ b/configure.ac
@@ -3847,18 +3847,18 @@ AC_ARG_ENABLE(qt, [
 ])
 have_qt5_x11="no"
 AS_IF([test "${enable_qt}" != "no"], [
-  PKG_CHECK_MODULES([QT], [Qt5Core >= 5.5.0 Qt5Widgets Qt5Gui Qt5Svg], [
+  PKG_CHECK_MODULES([QT], [Qt6Core >= 5.5.0 Qt6Widgets Qt6Gui Qt6Svg], [
       PKG_CHECK_MODULES([QT5_X11], [Qt5X11Extras], [
           have_qt5_x11="yes"
       ],[
           AC_MSG_WARN([Not building Qt Interface with X11 helpers.])
       ])
-      QT_PATH="$(eval $PKG_CONFIG --variable=exec_prefix Qt5Core)"
-      QT_HOST_PATH="$(eval $PKG_CONFIG --variable=host_bins Qt5Core)"
-      QT_VERSION="$(eval $PKG_CONFIG --modversion Qt5Gui)"
-      AC_PATH_PROGS(MOC, [moc-qt5 moc], moc, ["${QT_HOST_PATH}" "${QT_PATH}/bin"])
-      AC_PATH_PROGS(RCC, [rcc-qt5 rcc], rcc, ["${QT_HOST_PATH}" "${QT_PATH}/bin"])
-      AC_PATH_PROGS(UIC, [uic-qt5 uic], uic, ["${QT_HOST_PATH}" "${QT_PATH}/bin"])
+      QT_PATH="$(eval $PKG_CONFIG --variable=exec_prefix Qt6Core)"
+      QT_HOST_PATH="$(eval $PKG_CONFIG --variable=libexecdir Qt6Core)"
+      QT_VERSION="$(eval $PKG_CONFIG --modversion Qt6Gui)"
+      AC_PATH_PROGS(MOC, [moc-qt6 moc], moc, ["${QT_HOST_PATH}" "${QT_BINDIR}/bin"])
+      AC_PATH_PROGS(RCC, [rcc-qt6 rcc], rcc, ["${QT_HOST_PATH}" "${QT_BINDIR}/bin"])
+      AC_PATH_PROGS(UIC, [uic-qt6 uic], uic, ["${QT_HOST_PATH}" "${QT_BINDIR}/bin"])
     ], [
       AS_IF([test -n "${enable_qt}"],[
         AC_MSG_ERROR([${QT_PKG_ERRORS}.])
